@model IEnumerable<EMSProj.ViewModel.EmpDepartMap>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee Mapping</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmpMapping" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Mapping
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model != null)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <tr>
                    <th style="width: 15%;">Employee Name</th>
                    <th style="width: 15%;">Department Name</th>
                    <th style="width: 15%;">Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeName</td>
                        <td>@item.DepartName</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="EmpMapping" asp-action="Edit" asp-route-id="@item.MapId"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                                <input type="submit" asp-controller="EmpMapping" asp-action="Delete"
                           asp-route-id="@item.MapId" class="btn btn-danger mx-2" value="Delete">
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div>
                No Data Currently Present !!
            </div>
        }
</div>